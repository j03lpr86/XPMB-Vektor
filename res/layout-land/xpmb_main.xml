<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:backports="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_l"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:isScrollContainer="false"
    
    tools:context=".XPMB_Main"
    tools:ignore="Deprecated" >

    <com.raddstudios.xpmb.utils.backports.XPMB_ImageView
        android:id="@+id/ivCustomBG"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        backports:alpha="0.0"
        tools:ignore="ContentDescription" />

    <com.raddstudios.xpmb.utils.backports.XPMB_ImageView
        android:id="@+id/ivSubmenuShown"
        android:layout_width="12dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="156dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ui_xmb_back"
        android:visibility="visible"
        backports:alpha="0.0"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/ivLoadAnim"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="4dp"
        android:scaleType="fitXY"
        android:visibility="visible"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="XPMB - Created by RozenTensai, improved by Vektor."
        android:textColor="#FFFFFFFF" />

</RelativeLayout>